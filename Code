# Sorting algorithms
# Bubble Sort
def bubblesort(arr):
    for i in range(len(arr)):
        for j in range(0, len(arr) -i -1):
            if arr[j] > arr[j+1]:
                temp=arr[j]
                arr[j]=arr[j+1]
                arr[j+1]=temp            
data=[-1,8,0,-5,1,7]
bubblesort(data)
print('Sorted Array in ascending order :',data)
